/* pages/profile/profile.wxss */

.profile-header {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  color: white;
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.user-level {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.level-text {
  font-size: 28rpx;
  font-weight: bold;
  white-space: nowrap;
}

.exp-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.exp-fill {
  height: 100%;
  background: white;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.exp-text {
  font-size: 24rpx;
  white-space: nowrap;
  opacity: 0.9;
}

.login-prompt {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 15rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.stats-section {
  padding: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 15rpx;
}

.stat-card {
  background: white;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.achievement-list {
  padding: 0;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 80rpx;
  text-align: center;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.achievement-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.view-all {
  text-align: center;
  padding: 20rpx 0 10rpx;
  color: #4F46E5;
  font-size: 28rpx;
}

.preference-list {
  padding: 0;
}

.preference-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.preference-item:last-child {
  border-bottom: none;
}

.preference-label {
  font-size: 32rpx;
  color: #1f2937;
}

.preference-value {
  font-size: 32rpx;
  color: #6b7280;
  padding: 10rpx 20rpx;
  background: #f8fafc;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

.menu-section {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8fafc;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 80rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
}

.menu-arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

.logout-section {
  padding: 40rpx 20rpx;
}
