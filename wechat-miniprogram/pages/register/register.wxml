<!--register.wxml-->
<view class="page">
  <view class="register-container">
    <!-- 头部 -->
    <view class="header-section">
      <view class="title">创建账号</view>
      <view class="subtitle">加入 LinguaForge，开始你的学习之旅</view>
    </view>

    <!-- 注册表单 -->
    <view class="form-section">
      <view class="card">
        <view class="input-group">
          <view class="input-label">用户名</view>
          <input 
            class="input" 
            type="text" 
            placeholder="请输入用户名（3-50个字符）" 
            value="{{username}}"
            bindinput="onUsernameInput"
            maxlength="50"
          />
        </view>

        <view class="input-group">
          <view class="input-label">邮箱</view>
          <input 
            class="input" 
            type="text" 
            placeholder="请输入邮箱地址" 
            value="{{email}}"
            bindinput="onEmailInput"
          />
        </view>

        <view class="input-group">
          <view class="input-label">密码</view>
          <input 
            class="input" 
            type="password" 
            placeholder="请输入密码（至少6位）" 
            value="{{password}}"
            bindinput="onPasswordInput"
          />
        </view>

        <view class="input-group">
          <view class="input-label">确认密码</view>
          <input 
            class="input" 
            type="password" 
            placeholder="请再次输入密码" 
            value="{{confirmPassword}}"
            bindinput="onConfirmPasswordInput"
          />
        </view>

        <button 
          class="btn btn-primary btn-full" 
          bindtap="handleRegister"
          disabled="{{isLoading}}"
        >
          {{isLoading ? '注册中...' : '注册账号'}}
        </button>

        <view class="form-footer">
          <text>已有账号？</text>
          <text class="link" bindtap="goToLogin">立即登录</text>
        </view>
      </view>
    </view>

    <!-- 用户协议 -->
    <view class="agreement">
      <text class="agreement-text">
        注册即表示同意
        <text class="link">《用户协议》</text>
        和
        <text class="link">《隐私政策》</text>
      </text>
    </view>
  </view>
</view>
